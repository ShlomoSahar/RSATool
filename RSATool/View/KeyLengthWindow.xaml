<Window x:Class="RSATool.View.KeyLengthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Generate key pair" Height="200" Width="300" Background="WhiteSmoke">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Key Length (in bits): " VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="18"/>
        <TextBox Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="15" FontWeight="Bold" Height="23" Width="110" Margin="0,0,10,0" x:Name="bitLength" TextChanged="bitLength_TextChanged"/>
        <Button Grid.Row="1" Content="Generate" Height="35" Width="130" HorizontalAlignment="Left" Margin="10,0,0,0" x:Name="generateKeysBtn" Click="generateKeysBtn_Click"/>
        <Button Grid.Row="1" Content="Cancel" Height="35" Width="130" HorizontalAlignment="Right" Margin="10,0,10,0" x:Name="cancelBtn" Click="cancelBtn_Click"/>
    </Grid>
   
</Window>
